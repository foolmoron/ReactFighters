uiPadding = 5px
.ui
    position: fixed
    bottom: 0
    width: 'calc(100% - %s)' % (2*gameBorderSize + 2*uiPadding)
    height: 'calc(%s - %s)' % (uiSize 2*uiPadding)
    padding: uiPadding;
    background-color: black
    border: gameBorderSize solid white
    border-radius: 16px
    color: white
    font-family: sprite
    
    .ui-buttons
        height: calc(100% - 14px)
        overflow-y: scroll
        background: rgba(255, 255, 255, 0.2)

    .ui-button
        display: table
        margin-top: 9px
        padding: 10px
        border: 4px solid transparent
        cursor: pointer
        &:hover
            border-color: white