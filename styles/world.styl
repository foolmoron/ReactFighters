.world
    position: fixed
    left: gameOriginX
    top: gameOriginY
    width: gameSize
    height: gameSize

    @keyframes contrastCycle {
        0%, 100% { filter: contrast(0.8) }
        50% { filter: contrast(1.8) }
    }
    @keyframes fadeCycle {
        0%, 100% { opacity: 1.0 }
        50% { opacity: 0.7 }
    }
    .scrolling-bg
        position: fixed
        width: 100%
        height: 100%
        background-image: url(IMG_ROOT + 'grasstile.png')
        &.dark
            background-image: url(IMG_ROOT + 'grasstiledark.png')
            animation: contrastCycle 5.5s infinite cubic-bezier(0.45, 0.05, 0.55, 0.95), fadeCycle 3.9s infinite cubic-bezier(0.45, 0.05, 0.55, 0.95)